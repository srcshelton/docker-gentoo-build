    PORTAGE_ELOG_CLASSES="log warn error" \
    PORTAGE_ELOG_SYSTEM="echo save mail_summary" \
    PORTAGE_COMPRESS="xz" \
    PORTAGE_COMPRESS_FLAGS="-9eT0"


