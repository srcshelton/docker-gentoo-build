	firmware='sys-kernel/linux-firmware'
	case "$( # <- Syntax
				grep -Fm 1 'cpu family' /proc/cpuinfo |
					cut -d':' -f 2- |
					awk '{print $1}'
			)" in
		16|17|18|20)
			microcode_blob='amd-ucode/microcode_amd.bin'
			;;
		21)
			microcode_blob='amd-ucode/microcode_amd_fam15h.bin'
