				sys-apps/coreutils
				sys-apps/kmod
				sys-apps/util-linux
				sys-process/time
				${microcode:-}
				${firmware:-}

				$( # <- Syntax
					if (( initramfs )); then
						cat <<-EOS
							net-nds/rpcbind
							net-wireless/bluez
							sys-fs/lvm2
							sys-fs/cryptsetup
							sys-kernel/dracut
							sys-libs/libcap
							sys-apps/kmod
							sys-apps/systemd
