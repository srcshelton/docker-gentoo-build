	clean=1
fi

if echo " ${*:-} " | grep -Fq -- ' --debug '; then
	raise_mem=1
fi

# --(no-)install: see below
if echo " ${*:-} " | grep -Eq -- ' --bundle[= ]'; then
	if echo " ${*:-} " | grep -Eq -- ' --bundle=[^ ]+ '; then
		bundle_dir="$( # <- Syntax
			echo " ${*} " |
				grep -Eo -- '--bundle=[^ ]+ ' |
				cut -d'=' -f 2- | sed 's/ $//'
