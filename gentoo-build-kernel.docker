	elif echo " ${*:-} " | grep -Eq -- ' --bundle [^ -][^ ]* '; then
		bundle_dir="$( # <- Syntax
			echo " ${*} " |
				grep -Eo -- '--bundle [^ ]+ ' |
				cut -d' ' -f 2- |
				sed 's/ $//'
		)"
	else
		bundle_dir='/usr/src'
	fi
	bundle=1
