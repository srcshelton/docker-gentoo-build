	package_override="$( # <- Syntax
		sed -r 's|^([^a-zA-Z])*([a-zA-Z].*)$|\1sys-kernel/\2|' \
			<<<"${package_override:-"${package_default}"}"
	)"
	print "Searching for package name '${package_override}' ..."
fi
_docker_resolve "${package_override:-"${package_default}"}"
if ! echo "${package}" | grep -Fq -- '/'; then
	error "Resolved package '${package}' with version '${package_version}'" \
		"lacks a category"
	die "Essential package data not found - aborting"
fi
print "Using package '=${package}' ..."
# shellcheck disable=SC2001 # POSIX sh compatibility
container_name="$( echo "${package}" | sed 's|/|.|' )"
export container_name
case "${package}" in
	*gentoo*)
		distro='-gentoo'
		;;
esac

# --patch
#
# Unless noted, the patches below are for the highest supported GCC version...
declare kpatch=''

if ! echo " ${*:-} " | grep -q -- ' --no-patch'; then
	case "${package_version}" in
		3.[23456789].*|3.1[01234].*)
			# gcc-4.2 patch also available
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/outdated_versions/linux-3.2%2B/gcc-4.9%2B/enable_additional_cpu_optimizations_for_gcc_v4.9%2B.patch' ;;
		3.1[56789].*|4.[0123456789].*|4.1[012].*)
			# gcc-4.2 patch also available
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/outdated_versions/enable_additional_cpu_optimizations_for_gcc_v4.9%2B_kernel_v3.15%2B.patch' ;;
		4.1[345678].*)
			# gcc-4.9 patch also available
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/outdated_versions/enable_additional_cpu_optimizations_for_gcc_v8.1%2B_kernel_v4.13%2B.patch' ;;
		4.19.*|5.[01234].*)
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-4.19-5.4.patch' ;;
		5.[56].*)
			# gcc-9.1 patch also available
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/outdated_versions/enable_additional_cpu_optimizations_for_gcc_v10.1%2B_kernel_v5.5-v5.6.patch' ;;
		5.7.*)
			# gcc-9.1 patch also available
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/outdated_versions/enable_additional_cpu_optimizations_for_gcc_v10.1%2B_kernel_v5.7.patch' ;;
		5.[89].*|5.1[01234].*)
			#if type -pf gcc >/dev/null 2>&1; then
			#	case "$( gcc --version | awk '( NR == 1 ) { print $NF }' )" in
			#		9.*)
			#			kpatch='https://raw.githubusercontent.com/graysky2/kernel_gcc_patch/master/more-uarches-for-gcc-v9-and-kernel-5.8%2B.patch' ;;
			#		10.*)
			#			kpatch='https://raw.githubusercontent.com/graysky2/kernel_gcc_patch/master/more-uarches-for-gcc-v10-and-kernel-5.8%2B.patch' ;;
			#	esac
			#fi
			#kpatch='https://github.com/graysky2/kernel_compiler_patch/raw/master/more-uarches-for-kernel-5.8%2B.patch'
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-5.8-5.14.patch'
			case "${package_version}" in
				5.11.*)
					kpatch="${kpatch:+"${kpatch} "}https://lore.kernel.org/linux-btrfs/206d121e2e2b609ffe31217e6d90bfabe1c4e121.1616066404.git.fdmanana@suse.com/raw" ;;
			esac
			;;
		5.15.*|5.16.*)
			#kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-5.15%2B.patch' ;;
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-5.15-5.16.patch' ;;
		5.1[789].*|6.0.*|6.1.[0123456][0-9]*|6.1.7[0-8]*)
			#kpatch='https://github.com/graysky2/kernel_compiler_patch/raw/master/more-uarches-for-kernel-5.17%2B.patch'
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-5.17-6.1.78.patch'
			case "${package_version}" in
				5.19.*)
					kpatch="${kpatch:+"${kpatch} "}https://lore.kernel.org/all/20220630090100.2769490-1-yi.zhang@huawei.com/raw"
			esac
			;;
		6.1.79*|6.1.[89][0-9]*|6.1.[1-9][0-9][0-9]*|6.[234567].*)
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-6.1.79-6.8-rc3.patch' ;;
		6.8.*)
			kpatch='https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/more-uarches-for-kernel-6.8-rc4%2B.patch' ;;
		'')
			: ;;
		*)
			#if ! echo " ${*:-} " | grep -q -- ' --no-patch'; then
				warn "No known patch for kernel ${package_version} from https://github.com/graysky2/kernel_compiler_patch"
			#fi
			;;
	esac
fi
case "${arch:-"${ARCH:-}"}" in
	arm64)
		kpatch="${kpatch:+"${kpatch} "}https://raw.githubusercontent.com/graysky2/kernel_compiler_patch/master/build-with-mcpu-for-cortex-a72.patch"
		;;
esac

print "Kernel patch(es) are: '${kpatch:-}'"
# Allow '--no-patch --patch=...' to exclude default kernel patches...
