		binutils_min_ver='2.25.0'
		case "${arch:-"${ARCH:-}"}" in
			hppa)
				gcc_min_ver='12.0.0'
				;;
			*)
				gcc_min_ver='5.1.0'
				;;
		esac
		case "${arch:-"${ARCH:-}"}" in
			s390)
				llvm_min_ver='15.0.0'
				;;
			*)
				llvm_min_ver='11.0.0'
				;;
		esac
		;;
	6.7.*)
		binutils_min_ver='2.25.0'
		case "${arch:-"${ARCH:-}"}" in
			hppa)
				gcc_min_ver='12.0.0'
				;;
			*)
				gcc_min_ver='5.1.0'
				;;
		esac
		case "${arch:-"${ARCH:-}"}" in
			loong)
				llvm_min_ver='18.0.0'
