	fi
	unset graphroot
	if [[ -n "${TMPDIR:-}" ]]; then
		if ! [[ -d "${TMPDIR}" ]]; then
			die "Temporary directory '${TMPDIR}' (from variable 'TMPDIR')" \
				"doesn't exist"
