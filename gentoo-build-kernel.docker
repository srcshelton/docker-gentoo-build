		if [[ -d /boot/efi ]]; then
			docker_extra_mounts+=( # <- Syntax
				$( add_mount --dir --no-ro --print '/boot/efi' '/host/...' )
			) || :
		fi
	fi

	declare -i rc=0
	declare graphroot=''
	if graphroot="$( docker info | grep -- 'graphRoot:' | sed 's/^.*: //' )" &&
			[[ -d "${graphroot}" ]]
	then
